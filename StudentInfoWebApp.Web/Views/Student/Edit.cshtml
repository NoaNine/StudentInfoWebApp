@model StudentInfoWebApp.DAL.Models.Student

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

<h1>@SharedLocalizer["Edit"]</h1>

<h4>@SharedLocalizer["Student"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["First name"]</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["Last name"]</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Group" />
            <input type="hidden" asp-for="GroupId" />
            <div class="form-group">
                <input type="submit" formmethod="post" value="@SharedLocalizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@SharedLocalizer["Back to list"]</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ScriptsPartial");
    }
}